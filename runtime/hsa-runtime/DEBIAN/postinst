#/bin/bash

set -e

do_ldconfig() {
    echo /opt/rocm/hsa/lib > /etc/ld.so.conf.d/hsa-rocr-dev.conf && ldconfig
}

case "$1" in
   configure)
       do_ldconfig
       mkdir -p /opt/rocm/include
       ln -s ../hsa/include/hsa /opt/rocm/include/hsa
   ;;
   abort-upgrade|abort-remove|abort-deconfigure)
       echo "$1"
   ;;
   *)
       exit 0
   ;;
esac
